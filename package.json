{
  "name": "@livewave/react",
  "version": "1.0.0",
  "description": "Official React SDK for LiveWave real-time events and notifications platform",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "lint": "eslint src --ext .ts,.tsx",
    "test": "vitest",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "livewave",
    "react",
    "realtime",
    "websocket",
    "notifications",
    "broadcasting",
    "hooks",
    "laravel",
    "reverb",
    "pusher",
    "echo"
  ],
  "author": {
    "name": "LiveWave Team",
    "email": "support@livewave.app"
  },
  "license": "MIT",
  "homepage": "https://github.com/touhi13/live-wave-react#readme",
  "bugs": {
    "url": "https://github.com/touhi13/live-wave-react/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/touhi13/live-wave-react.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "react": ">=17.0.0",
    "react-dom": ">=17.0.0"
  },
  "dependencies": {
    "laravel-echo": "^1.15.0",
    "pusher-js": "^8.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
